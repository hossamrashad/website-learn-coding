                                                br
                                                span(class="property pl-30") color
                                                span(class="token") : 
                                                span(class="number") #3498db;
                                                br
                                                span(class="token") }
                                                br
                                                span(class="element-child") .child 
                                                span(class="token") {
                                                br
                                                span(class="property pl-30") @extend %main;
